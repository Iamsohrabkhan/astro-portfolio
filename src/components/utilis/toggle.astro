<div>
  <input type="checkbox" class="checkbox" id="checkbox">
  <label for="checkbox" class="checkbox-label">
    <i class="fas fa-moon"></i>
    <i class="fas fa-sun animate-spin-slow"></i>
    <span class="ball"></span>
  </label>
</div>
<style>
.checkbox {
  opacity: 0;
  position: absolute;
}
.checkbox-label {
  background-color: #111;
  width: 50px;
  height: 26px;
  border-radius: 50px;
  position: relative;
  padding: 5px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fa-moon {color: #f1c40f;}
.fa-sun {color: #f39c12;}

.checkbox-label .ball {
  background-color: #fff;
  width: 22px;
  height: 22px;
  position: absolute;
  left: 2px;
  top: 2px;
  border-radius: 50%;
  transition: transform 0.2s ease-in;
}

.checkbox:checked + .checkbox-label .ball {
  transform: translateX(24px);
}
</style>


<script>
  const checkbox = document.getElementById("checkbox");
    const body = document.body;

    // Check local storage for the "dark" key and set dark mode accordingly
    const isDarkMode = localStorage.getItem("dark");
    if (isDarkMode == "true") {
      body.classList.add("dark");
      checkbox.checked = true;
    }

    // Add event listener to toggle dark mode and update local storage
    checkbox.addEventListener("change", () => {
      if (checkbox.checked) {        
        body.classList.add("dark");
        localStorage.setItem("dark", "true");
      } else {
        body.classList.remove("dark");
        localStorage.setItem("dark", "false");
      }
    });

</script>