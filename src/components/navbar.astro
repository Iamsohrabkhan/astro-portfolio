          </div>
        </a>
      </li>
      
    </ul>   

    <div class="icon w-7 font-bold md:w-0 flex md:hidden cursor-pointer md:mx-0 mx-5 order-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="ham dark:text-white w-6 h-6 block"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>

      <svg
       xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="cross dark:text-white w-6 h-6 hidden "
      >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>   
        
      </div>
      <div class="toggle relative order-1">
        <Toggle />
        </div>
   
 </div>

    
  </nav>
</header>

<script>

const toggleVisibility=()=>{
    const hamElement = document.querySelector('.ham');
    const crossElement = document.querySelector('.cross');
    const navItems = document.querySelector('.nav-items');
   
    const classToRemove = "flex flex-col absolute bg-white transition-transform w-full -z-50 top-10 p-10 right-0 left-0";
    if(hamElement.classList.contains("block") && crossElement.classList.contains("hidden")  ){

        hamElement.classList.add("hidden")
        hamElement.classList.remove("block")
        crossElement.classList.add("block")
        crossElement.classList.remove("hidden")

        navItems.classList.add(...classToRemove.split(" "))
        navItems.classList.remove("hidden")
    }
    else{
        hamElement.classList.add("block")
        hamElement.classList.remove("hidden")
        crossElement.classList.add("hidden")
        crossElement.classList.remove("block")

        navItems.classList.remove(...classToRemove.split(" "))
        navItems.classList.add("hidden")

    }
    
}
 const icon=document.querySelector(".icon");
 icon.addEventListener("click",toggleVisibility)

</script>
