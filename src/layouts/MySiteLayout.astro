---
// import BaseHead from '../components/BaseHead.astro';
import Navbar from "../components/navbar.astro";
// import Navbar from '../components/navbar.astro';
import Footer from "../components/Footer.astro";

// import Footer from '../components/Footer.astro';
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>{title}</title>
  </head>
  <body class="selection:bg-teal-400 selection:text-black overflow-x-hidden">
    <main class="dark:bg-dark">

      <div class="fixed top-0 left-0 right-0 z-50 mb-10 dark:bg-dark">
        <Navbar />
        
      </div>
      <section class="mt-10 font-grotesk [&>*]:animate-fade  min-h-[79vh]">
        <!-- your content is injected here -->
        <slot />
      </section>
      <!-- <Footer /> -->
      <Footer />
    </main>
  </body>
</html>


