---
import ProjectCard from "@components/projectCard.astro";
import MySiteLayout from "src/layouts/MySiteLayout.astro";

---

<MySiteLayout title="Projects">
  <section class="mt-12 pt-12 text-center">
    <h1 class="test1 sm:text-5xl text-4xl font-black mb-4 text-gray-900 before:bg-teal-400 dark:text-white md:before:w-60">Recent Work</h1>
      <ProjectCard/>
    </section>
</MySiteLayout>

<style>
        
  h1 {
    padding: 30px 0 8px;
    position: relative;
  }
  
  h1::before {
    content: "";
    position: absolute;
    left: 50%;
  
    bottom: 6px;
    width: 150px;
    height: 14px;
    transform: skew(-12deg) translateX(-60%);
    z-index: -1;
  }
      
  </style>