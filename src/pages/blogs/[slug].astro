---
import MySiteLayout from "src/layouts/MySiteLayout.astro";

import { getCollection } from "astro:content";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("blogs");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MySiteLayout title={`Blogs |" ${entry.data.title}`}>
  <article class="mt-24 prose-slate prose-teal mx-auto prose prose-lg p-5" >
    <h1>{entry.data.title}</h1>
    <img src={entry.data.image} alt={entry.data.title} loading="lazy" />
    <Content />
  </article>
</MySiteLayout>
